<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="travelmode"
            type="com.example.glosanewapp.network.model.TravelMode" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:visibility="visible"
            app:cardElevation="@dimen/_5sdp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:layout_margin="@dimen/_3sdp">

                <TextView
                    android:id="@+id/custom_mode_tv_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/custom_mode_tv_modedesc"
                    android:fontFamily="@font/neuehaasdisplaymediu"
                    android:gravity="center"
                    android:text="@{travelmode.selectedMode}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/custom_mode_tv_modedesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/neuehaasdisplayblack"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text="@{travelmode.description}"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="@dimen/_92sdp"
            android:layout_height="@dimen/_92sdp"
            android:background="@drawable/redborder"
            android:gravity="center"
            android:rotation="45"
            android:elevation="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="@dimen/_88sdp"
                android:layout_height="@dimen/_88sdp"
                android:background="@drawable/whiteborder"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/_84sdp"
                    android:layout_height="@dimen/_84sdp"
                    android:background="@drawable/blackborder"
                    android:layout_margin="@dimen/_1sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dotgradienticon"
                        android:background="@drawable/dotgradienticon"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_above="@id/custom_mode_modeimg" />

                    <ImageView
                        android:id="@+id/custom_mode_modeimg"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_pedestrianicon"
                        android:rotation="315" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dotgradienticon"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:layout_below="@id/custom_mode_modeimg" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>